<p id="notice"><%= notice %></p>


<p>
  <strong>Author:</strong>
  <%= @survey.author_id %>
</p>

<p>
  <strong>Title:</strong>
  <%= @survey.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @survey.description %>
</p>

<p>
  <strong>Published?:</strong>
  <%= @survey.published %>
</p>

<br>

<%= form_for(@submission) do |f| %>

  <% @questions.each do |question| %>
    <div><%= "*" if question.required %><%= question.order_number %>. <%= question.question_text %></div>
    <% if question.question_info %>
      <div><%= question.question_info %></div>
    <% end %>
      <%= f.fields_for :answers do |ff| %>
        <% if question.question_type == "Text - Short" %>
          <div><%= ff.text_field :response %>HI</div>
        <% elsif question.question_type == "Text - Long" %>
          <div><%= ff.text_area :response %></div>
        <% elsif question.question_type == "Yes or No" %>
          <div><%= ff.radio_button :response, 'choice' %>
          <%= ff.label :response, 'Yes', :value => true %>
          <%= ff.radio_button :response, 'choice' %>
          <%= ff.label :response, 'No', :value => false %>HI</div
        <% else %>
          <div><%= ff.check_box :response %>HI</div>
        <% end %>
      <% end %>
  <% end %>

  <div><%= f.submit "Submit" %></div>
<% end %>




